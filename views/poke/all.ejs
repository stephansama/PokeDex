<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/header.ejs') %> 
    <title>Pok√©Dex | Show All</title>
</head>
<body>
    <%- include('../components/title.ejs') %>
    <div id="pokedex">
        <div id="cardcontainer">
            <% data.forEach(elem => { %>
                <div id="pokecard">
                    <div class="header img">
                        <img src="<%= elem.img %>" alt="<%= elem.name %>">
                    </div>
                    <table>
                        <tr>
                            <td>ID</td>
                            <td>#<%= elem.id %></td>
                        </tr>
                        <tr>
                            <td>NAME</td>
                            <td><%= elem.name %></td>
                        </tr>
                        <tr>
                            <td>TYPE 1</td>
                            <td><%= elem.type[0] %></td>
                        </tr>
                        <tr>
                            <td>TYPE 2</td>
                            <td><%= elem.type[1] ? elem.type[1] : '----' %></td>
                        </tr>
                        <!-- <%# elem.type.forEach(type => { %>
                            <tr>
                                <td>TYPE</td>
                                <td><%#= type %></td>
                            </tr>
                        <%# }) %>  -->
                        <!-- <%# Object.keys(elem).forEach(key => { %>
                            <tr>
                                <td><%#= key.toUpperCase() %></td>
                                <td><%#= elem[key] %> </td>
                            </tr>
                        <%# }) %>  -->
                    </table>
                </div>
            <% }) %>
        </div>
        <script>
            const cards = document.querySelectorAll('#pokecard');
            cards.forEach((card, idx) => {
                card.addEventListener('click', function(e) {
                    window.location.href = `/poke/${idx}`
                })
            })
        </script>
    </div>
    <%- include('../components/footer.ejs') %> 
</body>
</html>