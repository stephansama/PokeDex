<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/header.ejs') %>
    <link rel="stylesheet" href="/static/css/show.css">
    <script src="/static/js/chart.min.js"></script>
    <title>Pok√©Dex | <%=data[id].name %></title>
</head>
<body>
    <%- include('../components/title.ejs') %>
    <div id="pokedex">
        <div id="showtitle">
            <a href="/poke/all" id="link"><-</a>
            <div id="subtitle"><%= data[id].name %> </div>
        </div>
        <div id="pokeinfo">
            <div id="showimage">
                <img src="<%=data[id].img %>" alt="<%=data[id].name%>">
            </div>
            <div id="right">
                <!-- TYPE TABLE -->
                <table>
                    <tr>
                        <td>TYPE 1</td>
                        <td class="<%=data[id].type[0]%>"></td>
                        <td>TYPE 2</td>
                        <td class="<%=data[id].type[1]%>"><%= data[id].type[1] === 'undefined' ? '----': ''%></td>
                    </tr>
                </table>
                <!-- Chart.JS Chart -->
                <div id="chartcontainer">
                    <canvas id="pokechart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>
</body>
<script src="/static/js/charts.js"></script>
<script>
    document.onkeydown = (k) =>{
        if(k.code === 'Backspace'){
            window.location.href = '/usr/<%=id %>/dashboard'
        }
    }

    createChart({
        HP: parseInt(`<%=data[id].stats.hp%>`),
        ATK: parseInt(`<%=data[id].stats.attack%>`),
        DEF: parseInt(`<%=data[id].stats.defense%>`),
        SPATK: parseInt(`<%=data[id].stats.spattack%>`),
        SPDEF: parseInt(`<%=data[id].stats.spdefense%>`),
        SPEED: parseInt(`<%=data[id].stats.speed%>`),
    });
</script>
</html>